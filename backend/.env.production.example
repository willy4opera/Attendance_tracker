# Production Environment Variables
# Copy this to .env and fill in actual values

NODE_ENV=production

# Database - Use strong, unique credentials
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=attendance_production
DB_USER=attendance_prod_user
DB_PASSWORD=generate-strong-password-here

# JWT - Generate random secrets
JWT_SECRET=generate-64-char-random-string
JWT_REFRESH_SECRET=generate-different-64-char-random-string
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Service
EMAIL_HOST=your-smtp-host
EMAIL_PORT=587
EMAIL_USER=your-email@domain.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourdomain.com

# Application
PORT=5000
APP_URL=https://yourdomain.com

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=12

# Session
SESSION_SECRET=generate-another-random-string

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=error

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# NEVER include test users or default passwords in production!
