  "layout": {
    "sidebar": {
      "width": 240,
      "collapsedWidth": 64,
      "position": "left",
      "defaultState": "expanded",
      "backgroundColor": "#ffffff",
      "showToggle": true
    },
    "header": {
      "height": 64,
      "position": "fixed",
      "backgroundColor": "#ffffff",
      "showLogo": true,
      "showSearch": true,
      "showNotifications": true,
      "showProfile": true
    },
    "footer": {
      "show": true,
      "height": 48,
      "position": "relative",
      "backgroundColor": "#f5f5f5",
      "content": "© 2024 Attendance Tracker. All rights reserved."
    },
    "content": {
      "padding": 24,
      "maxWidth": 1200,
      "centered": true
    }
  },
  "branding": {
    "logo": {
      "light": "/assets/logo-light.svg",
      "dark": "/assets/logo-dark.svg",
      "width": 150,
      "height": 40,
      "alt": "Attendance Tracker Logo"
    },
    "favicon": {
      "ico": "/assets/favicon.ico",
      "png16": "/assets/favicon-16x16.png",
      "png32": "/assets/favicon-32x32.png",
      "appleTouchIcon": "/assets/apple-touch-icon.png"
    },
    "appName": "Attendance Tracker",
    "shortName": "AT",
    "appDescription": "Professional Attendance Management System",
    "copyright": "© 2024 Your Company. All rights reserved.",
    "socialLinks": {
      "facebook": "",
      "twitter": "",
      "linkedin": "",
      "github": ""
    }
  },
  "components": {
    "buttons": {
      "variant": "contained",
      "size": "medium",
      "textTransform": "none",
      "disableElevation": false,
      "disableRipple": false
    },
    "inputs": {
      "variant": "outlined",
      "size": "medium",
      "margin": "normal",
      "fullWidth": true
    },
    "tables": {
      "striped": true,
      "hover": true,
      "dense": false,
      "stickyHeader": true,
      "showBorder": true
    },
    "cards": {
      "elevation": 1,
      "variant": "elevation",
      "square": false
    },
    "dialogs": {
      "maxWidth": "sm",
      "fullWidth": true,
      "disableBackdropClick": false
    },
    "alerts": {
      "variant": "standard",
      "severity": "info",
      "closeButton": true
    }
  },
  "animations": {
    "enabled": true,
    "duration": "standard",
    "easing": "easeInOut"
  }
}
